@charset "utf-8";
html, body
{
    color:#444;
	font-family:arial,sans-serif;
	/*font-family:"lucida grande",tahoma,verdana,arial,sans-serif;*/
    font-size:12px;
    direction:ltr;
	margin:0;
	padding:0;
}


ol, ul{list-style: none;margin:0;padding:0;}
a{color:#3B5998;text-decoration:none;}
a:hover{text-decoration:underline;}
a img{border-width:0;display:block;}
.left{float:left !important;position:relative;}
.right{float:right !important;position:relative;}
.mt20{margin-top:20px !important;}

.hide{display:none;}
.loading{background:transparent url(../img/big-circle.gif) no-repeat 10px 10px;}
.shadow{border:1px solid #ccc;box-shadow: 1px 1px 10px #ccc; -moz-box-shadow: 1px 1px 10px #ccc;-webkit-box-shadow:1px 1px 10px #ccc;}
.button{background-position:0 -30px;cursor:pointer;padding:3px 20px 3px 20px;height:30px;background-color:#EEE;background-image:url(../img/bg-btn.gif);text-align:center;border:1px solid #ccc;color:#444;}
.success {background-color: #90FF7E;color:#090;border-color:#393;border-width:1px;border-style:solid;padding:8px;margin:0 0 10px 0;}

.clearfix{display:block;zoom:1;}
.clearfix:after{content:".";display:block;height:0;clear:both;visibility:hidden;}

ul.float{display:block;zoom:1;}
ul.float:after{content:".";display:block;height:0;clear:both;visibility:hidden;}
ul.float li{float:left;}



.configBtn
{
	-webkit-transition: opacity;
	-webkit-transition-timing-function: ease-in;
	-webkit-transition-duration: 400ms;
	opacity:0.3;
	background-image: url(../img/config_d.png);
	
	background-color: transparent;
	background-position: center center;
	background-repeat: no-repeat;
	border: 0;
	height: 14px;
	padding: 0;
	position: absolute;
	width: 14px;
	cursor:pointer;
}

.configBtn:hover,
.config a:hover button
{
	-webkit-transition: opacity;
	-webkit-transition-timing-function: ease-in;
	-webkit-transition-duration: 400ms;
	opacity:1;
}

.config a{padding-left:17px;}





/* Generic styling */
.videos .thumb{display:block;width:120px;height:90px;overflow:hidden;position:relative;}
.videos span{position:absolute;bottom:0;right:0;font-size:11px;background-color:#2D2D2D;color:#fff;padding:2px 5px 2px 5px;opacity:0.9;font-weight:bold;}
.videos .meta{font-size:11px;}
.videos .desc{overflow:hidden;text-align:justify;max-height:44px;}
.sizer{width:970px;margin:0 auto 0 auto;position:relative;}




/*
	Stsyling of the instant page
*/
#ytInstantSpacer{background-color:#E5E5E5;border-bottom:1px solid #ccc;height:160px;}
#ytInstant{background:white url(../img/bg.png) repeat-x 0 0;}
#ytInstantInner{padding:5px 0 100px 0;min-height:200px;}
#ytPlayerWrapper{background-color:#000;margin-top:10px;}
#ytPlayer{display:block;width:700px;height:400px;margin:0 auto 0 auto;}
#ytInstant li{border-bottom:1px solid #e5e5e5;margin-bottom:10px;padding-bottom:10px;}
#ytInstant .content{width:700px;margin-left:10px;}
#ytInstant h1{margin:0;padding:0;font-weight:normal;}
#ytInstant .results{margin:0;padding:0;}
#ytInstant .videos{margin-top:20px;}
#ytInstant .config{position:absolute;top:10px;right:0;}











/*
	Styling of the popup
*/
#ytPopup{display:block;width:460px;margin:0;padding:0;position:relative;}
#ytPopup .tabs{border-bottom:1px solid #3B5998;margin:10px 0 0 0;padding-bottom:3px;}
#ytPopup .tabs li{margin-left:7px;}
#ytPopup .tabs a{font-weight:bold;padding:3px 5px 3px 5px;}
#ytPopup .tabs a.active{background-color:#3B5998;color:#fff;}

#ytPopup .videos{margin:0;min-height:100px;width:460px;height:570px;overflow:hidden;overflow-y:auto;}
#ytPopup .thumb{display:block;width:90px;height:67px;overflow:hidden;position:relative;}
#ytPopup .videos li{border-bottom:1px solid #e5e5e5;padding-bottom:7px;margin:10px 0 10px 10px;}
#ytPopup .desc{max-height:32px;text-align:left;}

#ytPopup p{font-size:11px;line-height:1.4em;margin:5px 0 0 0;padding:0;}
#ytPopup .configBtn{right:4px;top:0;}








/*
	Options styling
*/
.option{margin:20px 0 0 0;padding:0 0 20px 0;border-bottom:1px solid #e5e5e5;}
.option label{display:block;width:270px;float:left;}
.option input, .option select, .option a{float:left;}
.save{border-width:0 !important;padding:0 0 0 270px;}




